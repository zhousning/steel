- provide(:title, t('.title'))

.container
  .row
    .col-md-6.col-md-offset-3.login-panel
      = form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-horizontal"}) do |f|
        = devise_error_messages!
        .form-group
          %label.col-md-2
            邮箱
          .col-md-10
            = f.email_field :email, :autofocus => true, :required => true, :class => "form-control"
        .form-group
          %label.col-md-2
            密码
          .col-md-10
            = f.password_field :password, :autocomplete => "off", :class => "form-control"
        .form-group
          %label.col-md-2.padding-right-0
            确认密码
          .col-md-10
            = f.password_field :password_confirmation, :autocomplete => "off", :class => "form-control"
        .form-group
          .col-md-4.col-md-offset-2
            = link_to "已有账户", new_user_session_path, :class => "text-center"
        .form-group
          .col-md-12
            = f.submit "注册", :class => "btn btn-lg btn-primary btn-block"
