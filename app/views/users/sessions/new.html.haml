- provide(:title, t('.title'))

.container
  .row
    .col-md-6.col-md-offset-3.login-panel
      = form_for resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"} do |f|
        .form-group
          %label.col-md-2
            邮箱
          .col-md-10
            = f.email_field :email, :autofocus => true, :required => true, :class => "form-control"
        .form-group
          %label.col-md-2
            密码
          .col-md-10
            = f.password_field :password, :autocomplete => "off", :class => "form-control"
        .form-group
          .col-md-4.col-md-offset-2
            .checkbox
              %label
                = f.check_box :remember_me
                记住我
          .col-md-6.padding-top-7
            = link_to "创建账户", new_user_registration_path, :class => "text-center"
        .form-group
          .col-md-12
            = f.submit "登录", :class => "btn btn-lg btn-primary btn-block"
        -#
          %a.pull-right.need-help{:href => "#"} Need help?
      -#
        = render "users/shared/links"
